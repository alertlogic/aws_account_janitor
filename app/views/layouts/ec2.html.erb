<!DOCTYPE html>
<html>
<head>
  <title>JanitorUi</title>
  <%= stylesheet_link_tag    'janitor', media: 'all' %>
  <%= javascript_include_tag 'janitor' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Account Janitor</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><a href="/dashboard">Dashboard</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">EC2 <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to "Abandoned Instances", { controller: "ec2", action: "abandoned_instances", account_id: params[:account_id] } %>
              </li>
              <li>
                <%= link_to "Abandoned ASGs", { controller: "ec2", action: "abandoned_asgs", account_id: params[:account_id] } %>
              </li>
              <li>
                <%= link_to "Abandoned Volumes", { controller: "ec2", action: "abandoned_volumes", account_id: params[:account_id] } %>
              </li>
            </ul>
          </li>
          <li><a href="/dynamo_db">Dynamo DB</a></li>
          <li></li>
          <li><a href="/account">Settings</a></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <b>Account:</b> <%= @current_account.alias %><span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <% @account_list.each do |account| %>
                <li><a href="?account_id=<%= account.id %>"><%= account.alias %></a></li>
              <% end %>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

<%= yield %>

</body>
</html>
